{
  "expo": {
    "name": "MyStock",
    "slug": "mystock",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "mystock",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mystock.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Permite escanear códigos de barras dos produtos",
        "NSPhotoLibraryUsageDescription": "Permite adicionar fotos dos produtos"
      }
    },
    "android": {
      "package": "com.mystock.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permite escanear códigos de barras dos produtos"
        }
      ]
    ]
  }
}
